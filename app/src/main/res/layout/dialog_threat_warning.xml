<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/threat_level_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/threat_critical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/threat_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_threat_critical"
                        app:tint="@color/white"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/threat_level_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CRITICAL THREAT"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/text_secondary" />

        </LinearLayout>

        <!-- URL Information -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_variant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blocked URL"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/threat_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://suspicious-site.example.com/login"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="monospace"
                    android:background="@drawable/url_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/threat_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domain: suspicious-site.example.com"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Threat Description -->
        <TextView
            android:id="@+id/threat_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This URL has been identified as an active phishing site with high confidence. Accessing it may compromise your personal information, passwords, or financial data."
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Confidence Score -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confidence Score"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/confidence_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/threat_high" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/confidence_progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="95"
                    android:progressTint="@color/threat_high" />

                <TextView
                    android:id="@+id/detection_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detected: 2 seconds ago"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Threat Categories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threat Categories"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/threat_categories_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp" />

        <!-- Analysis Layers -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detection Layers"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/analysis_layers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp" />

        <!-- Threat Sources -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Threat Intelligence Sources"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/threat_sources_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Technical Details (Expandable) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_show_technical_details"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Technical Details"
            android:textColor="@color/primary"
            app:icon="@drawable/ic_expand_more"
            app:iconTint="@color/primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/technical_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <!-- ML Model Details -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/surface_variant">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ML Model Analysis"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/ml_model_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PhishShield AI v1.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/ml_model_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version: 1.0.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/ml_confidence_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ML Confidence: 92%"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Feature Analysis -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Contributing Features"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:id="@+id/feature_analysis_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp" />

            <!-- Network Analysis -->
            <LinearLayout
                android:id="@+id/network_analysis_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network Analysis"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP: 192.168.1.1"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/server_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Unknown"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/ssl_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSL: Invalid"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Threat Intelligence Details -->
            <LinearLayout
                android:id="@+id/threat_intel_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Threat Intelligence Details"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/threat_intel_sources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sources: 5 sources"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/threat_intel_last_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated: 5 minutes ago"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/threat_intel_reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reputation: Malicious"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/threat_intel_sources_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_block_threat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Block"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/threat_high"
                    app:icon="@drawable/ic_block"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_allow_once"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Allow Once"
                    android:textColor="@color/primary"
                    app:strokeColor="@color/primary"
                    app:icon="@drawable/ic_allow_once"
                    app:iconTint="@color/primary" />

            </LinearLayout>

            <!-- Secondary Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_whitelist_domain"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Whitelist"
                    android:textColor="@color/primary"
                    app:icon="@drawable/ic_whitelist"
                    app:iconTint="@color/primary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_report_false_positive"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Report"
                    android:textColor="@color/primary"
                    app:icon="@drawable/ic_report"
                    app:iconTint="@color/primary" />

            </LinearLayout>

            <!-- Additional Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_details"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Details"
                    android:textColor="@color/text_secondary"
                    app:icon="@drawable/ic_details"
                    app:iconTint="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_share_threat"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Share"
                    android:textColor="@color/text_secondary"
                    app:icon="@drawable/ic_share"
                    app:iconTint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
