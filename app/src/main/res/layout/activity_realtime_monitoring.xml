<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.monitoring.RealtimeMonitoringActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.PhishShieldAI.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_toolbar"
            app:popupTheme="@style/Theme.PhishShieldAI.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Monitoring Status Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/monitoring_indicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_monitoring"
                        android:tint="@color/success"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Real-time Protection"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:id="@+id/monitoring_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVE"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/success" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/refresh_button"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:icon="@drawable/ic_refresh" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Control Switches -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitoring Controls"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Auto Refresh"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/auto_refresh_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Push Notifications"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/notifications_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- System Metrics -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Performance"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <!-- CPU and Memory Usage -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- CPU Usage -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CPU Usage"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:id="@+id/cpu_usage_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15.3%"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="@color/primary" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/cpu_usage_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:progressTint="@color/primary"
                                android:progress="15" />

                        </LinearLayout>

                        <!-- Memory Usage -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Memory Usage"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="4dp">

                                <TextView
                                    android:id="@+id/memory_usage_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="42.7%"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="@color/secondary" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/memory_usage_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                android:progressTint="@color/secondary"
                                android:progress="43" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Performance Metrics Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Network Latency -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/network_latency_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="23ms"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/success" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Latency"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- Active Scans -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/active_scans_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Scans"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- Uptime -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/uptime_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2h 14m"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uptime"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- Threats/min -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/threats_per_minute_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.3"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/warning" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Threats/min"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Additional Metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <!-- API Response Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/api_response_time_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156ms"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="API Response"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- DB Queries/sec -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/db_queries_per_sec_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12.4"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DB Queries/s"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Live Threat Summary -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Threat Summary"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Critical Threats -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/critical_threats_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                                android:textColor="@color/threat_critical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Critical"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- High Threats -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/high_threats_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                                android:textColor="@color/threat_high" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- Medium Threats -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/medium_threats_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                                android:textColor="@color/threat_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medium"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Network Health -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Health"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <!-- Internet Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Internet Connection"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                        <TextView
                            android:id="@+id/internet_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connected"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/success" />

                    </LinearLayout>

                    <!-- API Endpoints -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="API Endpoints"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                        <TextView
                            android:id="@+id/api_endpoints_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7/8 Active"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="@color/warning"
                            android:layout_marginEnd="8dp" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/api_endpoints_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginBottom="16dp"
                        android:progressTint="@color/warning"
                        android:progress="87" />

                    <!-- Additional Network Metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- DNS Resolution Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/dns_resolution_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12ms"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/success" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DNS Resolution"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                        <!-- Bandwidth Usage -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/bandwidth_usage_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.2 MB/s"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bandwidth"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="@color/on_surface_variant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Protection Layers Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7-Layer Defense Status"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/protection_layers_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Live Threat Feed -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Live Threat Feed"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                            android:textColor="@color/on_surface" />

                        <TextView
                            android:id="@+id/threat_feed_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26 active threats"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/on_surface_variant" />

                    </LinearLayout>

                    <!-- Empty state -->
                    <TextView
                        android:id="@+id/threat_feed_empty_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No active threats detected"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/success"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone" />

                    <!-- Threat feed list -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/threat_feed_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_live_threat" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- System Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Status"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/system_status_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_system_status" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
